<Window x:Class="targil3B.DistanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:targil3B"
        mc:Ignorable="d"
        Title="DistanceWindow" Height="100" Width="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Name="TextInputKm" Grid.Row="0" MinWidth="40"/>
        <Button  Name="button_sumbit"  Click="button_sumbit_Click" Grid.Row="1">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="bus-icon-vector-17120207.jpg" />
                    <TextBlock Text="drive" VerticalAlignment="Center"                      Margin="10" />
                </StackPanel>
            </Button.Content>
            
        </Button>
        
    </Grid>
</Window>
