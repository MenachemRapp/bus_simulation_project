<Window x:Class="PL_WPF.SelectViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL_WPF"
        mc:Ignorable="d"
        Title="Select View" Height="150" Width="600">
    
    <Grid>
        
        <Grid.ColumnDefinitions>
           <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        

        <TextBlock Text="Select the prefered view" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Line view" FontSize="20" Click="LineView_clicked" Grid.Column="0" Margin="5,5,5,5"/>
            <Button Content="Station view" FontSize="20" Click="StationView_clicked" Grid.Column="1" Margin="5,5,5,5"/>
        </Grid>
        <Label Content="set time for the simulater" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="0"/>
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <TextBox x:Name="hoursTb" Text="00" FontSize="20"  Width="27" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Label Content=":" FontSize="20" VerticalAlignment="Center"/>
                <TextBox x:Name="minutesTb" Text="00"  FontSize="20" Width="27" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Content=":" FontSize="20" VerticalAlignment="Center"/>
                <TextBox x:Name="secondsTb" Text="00"  FontSize="20" Width="27" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
            <Button Content="Start Simulation" FontSize="20" Click="Timer_clicked" Grid.Column="0" Margin="5,5,5,5"/>
        </Grid>
        <Border Grid.Column="1" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="1,0,0,0"/>
    </Grid>
    
</Window>
